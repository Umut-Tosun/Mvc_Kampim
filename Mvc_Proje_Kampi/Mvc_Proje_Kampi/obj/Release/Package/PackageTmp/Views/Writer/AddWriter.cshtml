@model EntityLayer.Concrete.Writer
@{
    ViewBag.Title = "AddWriter";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Yazar Ekleme</h1>
<br />
@using (@Html.BeginForm("AddWriter", "Writer", FormMethod.Post))
{
<div class="form-group">
    @Html.Label("Yazar Adı")
    @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control" })
    <h5>@Html.ValidationMessageFor(x => x.WriterName, null, new { @class = "text-danger" }) </h5>
    <br />
    @Html.Label("Yazar Soyadı")
    @Html.TextBoxFor(x => x.WriterSurname, new { @class = "form-control" })
    <h5>@Html.ValidationMessageFor(x => x.WriterSurname, null, new { @class = "text-danger" }) </h5>
    <br />
    @Html.Label("Yazar Mail")
    @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control" })
    <h5>@Html.ValidationMessageFor(x => x.WriterMail, null, new { @class = "text-danger" }) </h5>
    <br />
    @Html.Label("Yazar Şifresi")
    @Html.TextBoxFor(x => x.WriterPassword, new { @class = "form-control" })
    <h5>@Html.ValidationMessageFor(x => x.WriterPassword, null, new { @class = "text-danger" }) </h5>
    <br />
    @Html.Label("Yazar Görsel")
    @Html.TextBoxFor(x => x.WriterImage, new { @class = "form-control" })
    <h5>@Html.ValidationMessageFor(x => x.WriterImage, null, new { @class = "text-danger" }) </h5>
    <br />
    @Html.Label("Yazar Hakkında")
    @Html.TextBoxFor(x => x.WriterAbout, new { @class = "form-control" })
    <h5>@Html.ValidationMessageFor(x => x.WriterAbout, null, new { @class = "text-danger" }) </h5>
    <br />
    @Html.Label("Yazar Unvan")
    @Html.TextBoxFor(x => x.WriterTitle, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Yazarı Ekle</button>

</div>
}

