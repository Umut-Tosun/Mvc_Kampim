@using EntityLayer.Concrete
@model List<About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Hakkımızda Veri Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Hakkımızda Başlığı</th>
        <th>Aktif Yap</th>
        <th>Pasif Yap</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutID</td>
            <td>BAŞLIK</td>
            <td>
                @if (item.AboutStatus == true)
                {
                    <span class="badge badge-success">Aktif</span>
                }
                else
                {
                    <span class="badge badge-danger">Pasif</span>
                }
            </td>
            <td>
                @if (item.AboutStatus == true)
                {
                    <a class="btn btn-danger btn-sm" href="/About/DeleteAbout/@item.AboutID">
                        <h6>Pasif Yap</h6>
                    </a>
                }
                else
                {
                    <a class="btn btn-success btn-sm" href="/About/DeleteAbout/@item.AboutID">
                        <h6>Aktif Yap</h6>
                    </a>
                }
            </td>
        </tr>
    }

</table>
@Html.Action("AboutPartial", "About")