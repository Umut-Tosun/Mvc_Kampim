@model EntityLayer.Concrete.Message
@{
    ViewBag.Title = "GetInboxMessageDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

@{ string message = "";}
@{ string color = "";}
<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Gelen Mesaj Detayları</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                @Html.Action("MessageListMenu", "WriterPanelMessage")
                <!-- /.col -->
                <div class="col-md-9">
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h3 class="card-title">Mesajı Oku</h3>
                            <div class="card-tools">
                                <a href="#" class="btn btn-tool" data-toggle="tooltip" title="Previous"><i class="fas fa-chevron-left"></i></a>
                                <a href="#" class="btn btn-tool" data-toggle="tooltip" title="Next"><i class="fas fa-chevron-right"></i></a>
                            </div>
                        </div>
                        <!-- /.card-header -->

                        @if (@Model.IsRead == false)
                        {
                            message = "Okundu olarak İşaretle";
                            color = "btn btn-info btn-sm";
                        }
                        @if (@Model.IsRead == true)
                        {
                            message = "Okundu olarak İşaretlendi";
                            color = "btn btn-danger btn-sm";
                        }

                        <div class="card-body p-0">
                            <div class="mailbox-read-info">
                                <h5>Konu : @Model.subject</h5>
                                <br />
                                <h6>
                                    Mail : @Model.SenderMail
                                    <span class="mailbox-read-time float-right">@Model.MessageDate.ToString("dd-MMM-yyyy")</span>
                                </h6>
                            </div>
                            <!-- /.mailbox-read-info -->
                            <!-- /.mailbox-controls -->
                            <div class="mailbox-read-message">
                                <p>@Model.MessageContent</p>

                            </div>
                            <div>
                                @if (Model.IsRead == false)
                                {
                                    <a href="/Message/IsRead/@Model.MessageID" class="@color">@message</a>
                                }
                                @if (Model.IsRead == true)
                                {
                                    <a class="@color">@message</a>
                                }

                            </div>
                            <!-- /.mailbox-read-message -->
                        </div>
                        <!-- /.card-footer -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
    </section>
</body>
</html>


